ards .card-subtitle {\r\n        font-size: 13px;\r\n    }\r\n\r\n    .populaires-cards {\r\n        /* 1 column and 3 rows grid */\r\n        display: grid;\r\n        width: 100%;\r\n        grid-template-columns: 1fr 1fr 1fr;\r\n        grid-template-rows: 1fr;\r\n        /* gap btwn grids */\r\n        gap: 20px;\r\n        margin-top: 30px;\r\n    }\r\n    \r\n    /* !!!!!!! ACTIVITES !!!!!!! */\r\n    .activites-cards {\r\n        height: 100%;\r\n    }\r\n\r\n    .activites img {\r\n        /* modify height */\r\n        height: 200px;\r\n    }\r\n\r\n    /********** Footer **********/\r\n    footer {\r\n        margin-top: 65px;\r\n    }\r\n}\r\n\r\n/* Small devices (phones, less than 768px) - general*/\r\n@media (max-width: 780px) {\r\n    main {\r\n        width: 100%;\r\n        padding: 40px 0px;\r\n        box-sizing: border-box;\r\n    }\r\n\r\n    .main-container {\r\n        display: flex;\r\n        flex-direction: column;\r\n    }\r\n\r\n    /* !!!!!! HEADER !!!!!! */\r\n    \r\n    header {\r\n        height: 100px;\r\n        width: 100%;\r\n        padding: 30px 0px 10px 0px;\r\n        display: flex;\r\n        flex-direction: column;\r\n        justify-content: flex-start;\r\n        flex-wrap: nowrap;\r\n    }\r\n\r\n    .element-links-logo {\r\n        justify-content: center;\r\n        position: relative;\r\n        left: 0px;\r\n    }\r\n\r\n    .links-text { \r\n        /* IOT take all width*/\r\n        width: 100%;\r\n        height: 90px;\r\n    }\r\n\r\n    .sub-links-text { \r\n        /*share equal width between links*/\r\n        width: calc(100% / 2);\r\n        position: relative;\r\n        top: 10px;\r\n    }\r\n\r\n    .element-sub-links-text { \r\n        /*apply permanent solid grey bottom border to text links*/\r\n        margin: 20px 0px 0px 0px;\r\n        border-bottom: 2px solid #F2F2F2;\r\n        padding-bottom: 15px;\r\n        /* center text in his box*/\r\n        display: flex; \r\n        justify-content: center