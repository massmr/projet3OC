\r\ninput::-webkit-input-placeholder {\r\n    color: var(--placeholder-color);\r\n}\r\n \r\ninput:focus {\r\n    color: var(--placeholder-color);\r\n    outline: none;\r\n    border: 1px solid;\r\n    border-color: var(--main-color);\r\n}\r\n\r\ninput:placeholder-shown {\r\n    /* when users writing */\r\n    color: var(--placeholder-color);\r\n}\r\n\r\n.form__button {\r\n    background-color: var(--main-color);\r\n    border: 1px solid var(--main-color);\r\n}\r\n\r\n.button__color {\r\n    color: white;\r\n}\r\n\r\n.button__for--screen {\r\n    z-index: 3;\r\n    /* IOT center icon */\r\n    display: flex;\r\n    justify-content: center;\r\n    align-items: center;\r\n    width: 132px;\r\n    right: 182px;\r\n    border-radius: 0px 15px 15px 0px;\r\n}\r\n\r\n.button__for--responsive {\r\n    /* IOT hide responsive button */\r\n    display: none;\r\n    /* IOT to allow zindex */\r\n    z-index: 4;\r\n    max-width: 100%;\r\n    /* IOT to keep it at its place*/\r\n    min-width: 50px;\r\n    width: 50px;\r\n    height: 50px;\r\n    border-radius: 15px 15px 15px 15px;\r\n}\r\n\r\n\r\n/* !!!!!! FILTER !!!!!! */\r\n.filter {\r\n    /* separate with search bar */\r\n    margin-top: 35px;\r\n    display: flex;\r\n    /* wrap title and container */\r\n    flex-flow: row wrap;\r\n    /* center 2nd direction : title and elements */\r\n    align-items: center;\r\n    /* gap btwn filter title and the containers */\r\n    column-gap: 15px;\r\n}\r\n\r\n.filter__container {\r\n    display: flex;\r\n    flex-flow: row wrap;\r\n    gap: 15px;\r\n}\r\n\r\n.filter__element {\r\n    gap: 0px;\r\n    align-items: center;\r\n    /* not 50 bc od 2px border each side */\r\n    height: 46px;\r\n    padding: 0px 19px 0px 21.5px;\r\n    border: 2px solid #D9D9D9;\r\n    border-radius: 25px;\r\n}\r\n\r\n.filter__element p {\r\n    /* cancel margin */\r\n    margin: 0px;\r\n    font-size: 16px;\r\n}\r\n\r\n.filter__element:hover {\r\n    background-color: #DEEBFF;\r\n}\r\n\r\n.economique {\r\n